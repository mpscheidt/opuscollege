    <update id="updateScholarshipStudent" parameterType="ScholarshipStudent">
        UPDATE  opuscollege.sch_student
        SET     bankId              = #{bankId}    
        ,       account             = #{account}
        ,       accountActivated    = #{accountActivated}
        ,       active              = #{active}
        WHERE   studentId = #{studentId}
    </update>

    <update id="updateAppliedForScholarshipForStudent" parameterType="map">
        UPDATE  opuscollege.student
        SET     scholarship         = #{appliedForScholarship}
        WHERE   studentId           = #{studentId}
    </update>

    <insert id="addScholarshipStudent" parameterType="ScholarshipStudent">
        INSERT INTO opuscollege.sch_student
        (
            studentId
            ,bankId
            ,account
            ,accountActivated
            ,active
        ) VALUES (
            #{studentId}
            ,#{bankId}
            ,#{account}
            ,#{accountActivated}
            ,#{active}
        )
        <!-- http://opensource.atlassian.com/confluence/oss/pages/viewpage.action?pageId=407 -->
        <selectKey keyProperty="scholarshipStudentId" resultType="int">
            SELECT currVal('opuscollege.sch_studentSeq')
        </selectKey>
    </insert>
    
    <delete id="deleteScholarshipStudent" parameterType="int">
        DELETE  from opuscollege.sch_student
        where   scholarshipStudentId = #{value}
    </delete>


