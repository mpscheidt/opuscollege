    <!--  find findStudentsAppliedForScholarship -->
    <select id="findAllScholarshipStudents" parameterType="map" resultMap="ScholarshipStudentResultMap"> 
          select    
                person.*,
                student.*,
                institution.institutionDescription,
                branch.branchDescription,
                organizationalUnit.organizationalUnitDescription,
                study.id,
                study.studyDescription
                sch_student.scholarshipStudentId
        from opuscollege.student
        INNER JOIN opuscollege.sch_student ON opuscollege.sch_student.studentId = opuscollege.student.studentId
        INNER JOIN opuscollege.person ON opuscollege.student.personId = opuscollege.person.id
        INNER JOIN opuscollege.study on opuscollege.student.primaryStudyId = study.id
        INNER JOIN opuscollege.organizationalunit on opuscollege.study.organizationalUnitId = organizationalunit.id
        INNER JOIN opuscollege.branch on opuscollege.branch.id = organizationalunit.branchId
        INNER JOIN opuscollege.institution on opuscollege.institution.id = branch.institutionId
        LEFT JOIN opuscollege.studyPlan ON opuscollege.student.studentId = opuscollege.studyPlan.studentId     
        LEFT JOIN opuscollege.studyPlanDetail ON opuscollege.studyplan.id = opuscollege.studyPlanDetail.studyPlanId
        LEFT JOIN opuscollege.studyPlanCardinalTimeUnit on opuscollege.studyplan.studyPlanCardinalTimeUnitId = opuscollege.studyPlanCardinalTimeUnit.id                            
        LEFT JOIN opuscollege.studyGradeType on opuscollege.studyPlanCardinalTimeUnit.studyGradeTypeId = opuscollege.studyGradeType.id                            
        WHERE opuscollege.institution.institutionTypeCode = #{institutionTypeCode}
        AND   opuscollege.student.scholarship = 'Y'
        <if test='studyGradeTypeId != null and studyGradeTypeId != "0"'>
            and opuscollege.studyPlan.studyGradeTypeId = studyGradeType.id  
        </if>
        <if test='institutionId != null and institutionId != "0"'>
            and opuscollege.institution.id = #{institutionId}
        </if>
        <if test='branchId != null and branchId != "0"'>
            and   opuscollege.branch.id = #{branchId}
        </if>
        <if test='organizationalUnitId != null and organizationalUnitId != "0"'>
            and opuscollege.organizationalunit.id in (select id from opuscollege.crawl_tree(#{organizationalUnitId}, 0))
        </if>
        <if test='studyId != null and studyId != "0"'>
            and   opuscollege.study.id = #{studyId}
        </if>
        <if test='studyGradeTypeId != null and studyGradeTypeId != "0"'>
            and   studygradeType.id = #{studyGradeTypeId}
        </if>
        ORDER BY lower(person.surnameFull)
    </select>

    <select id="findScholarshipStudents" parameterType="map" resultMap="findScholarshipStudentsResultMap"> 
        select  distinct person.surnameFull
        ,       person.firstnamesFull
        ,       student.studentId
        ,       sch_student.scholarshipStudentId
        from    opuscollege.sch_scholarshipapplication
        inner join opuscollege.sch_student on sch_student.scholarshipstudentId = sch_scholarshipapplication.scholarshipstudentId
        inner join opuscollege.student on student.studentId = sch_student.studentId
        INNER JOIN opuscollege.person ON opuscollege.student.personId = opuscollege.person.id
        INNER JOIN opuscollege.study on opuscollege.student.primaryStudyId = study.id
        INNER JOIN opuscollege.organizationalunit on opuscollege.study.organizationalUnitId = organizationalunit.id
        INNER JOIN opuscollege.branch on opuscollege.branch.id = organizationalunit.branchId
        INNER JOIN opuscollege.institution on opuscollege.institution.id = branch.institutionId
    </select>

    <select id="findStudentByScholarshipStudentId" parameterType="int" resultMap="org.uci.opus.college.persistence.StudentMapper.StudentResultMap">
        select  student.*
        ,        person.*
        from opuscollege.student
        INNER JOIN opuscollege.person ON student.personId = person.id
        INNER JOIN opuscollege.sch_student ON student.studentId = sch_student.studentId
        WHERE sch_student.scholarshipStudentId = #{value}
    </select>

